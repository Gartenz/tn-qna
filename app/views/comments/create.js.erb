<% if comment.persisted? %>
  node = ''
  <% if question?(comment.commentable) %>
    node = '.question-comments'
  <% end %>
  <% if answer?(comment.commentable) %>
    node = '#answer-<%= comment.commentable_id %>-comments'
  <% end %>
  $(node).append('<%= j render comment %>')
  $('#comment_body').val('')
<% end %>
